<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.njit.student.yuqzy.njitstudent">

    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 如果将下载的文件保存到外部存储器，还需要配置外部存储器的读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/stu"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="E6rdq6U1vjjmTTglEtdX6fFbYTejWKEq" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thefinestartist.finestwebview.FinestWebViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.info.setting.SettingActivity"
            android:screenOrientation="portrait"
            android:label="设置" />
        <activity android:name=".ui.info.more.PersonInfoActivity" />
        <activity android:name=".ui.info.about.AboutActivity" />
        <activity android:name=".ui.info.about.PayActivity" />
        <activity
            android:name=".ui.info.news.NewsDetailActivity"
            android:label="新闻详情"></activity>
        <activity
            android:name=".ui.info.more.LikeNewsActivity"
            android:label="我的收藏"></activity>
        <activity
            android:name=".ui.info.course.CourseDetailActivity"
            android:label="课程详情"></activity>
        <activity
            android:name=".ui.info.course.CourseSJKActivity"
            android:label="实践课信息"></activity>
        <activity
            android:name=".ui.info.course.CourseTTBActivity"
            android:label="调、停、补课信息"></activity>
        <activity
            android:name=".ui.info.library.BookDetailActivity"
            android:label="书籍信息" />
        <activity
            android:name=".ui.info.more.LikeBooksActivity"
            android:label="图书收藏" />
        <activity android:name=".ui.info.more.UrlActivity" />

    </application>

</manifest>